@using WebApplication1.Components
@model WebApplication1.ViewModel.MarketingViewModel.MarketingViewModel
<style>
    .panel-heading {
        background-color: green !important;
    }

    .btn-primary {
        background-color: green;
        border-color: darkgreen;
    }
</style>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h1 class="panel-title">
            Event Information for @Model.TheEvent.EventName
        </h1>
    </div>
    <div class="panel-body">
        <!-- ** BEGIN MESSAGE AREA -->
        <div class="row">
            <div class="col-xs-12">
                @if (!Model.IsValid)
                {
                    <div class="alert alert-danger
                    alert-dismissable"
                         role="alert">
                        <button type="button" class="close"
                                data-dismiss="alert">
                            <span aria-hidden="true">
                                &times;
                            </span>
                            <span class="sr-only">Close</span>
                        </button>
                        @Html.ValidationSummary(false)
                    </div>
                }
            </div>
        </div>
        <!-- ** END MESSAGE AREA -->
        <!-- ** BEGIN INPUT AREA -->

       
        <div class="form-group">

            <div class="radio-inline">
                @Html.RadioButtonFor(m => m.Entity.Description, "Image", new {@checked = true}) Image Resource
            </div>
            <div class="radio-inline">
                @Html.RadioButtonFor(m => m.Entity.Description, "Document") Document Resouce

            </div>
        </div>
       
        <div class="form-group">
            @Html.LabelFor(m => m.Entity.Comments,
                "Comments")
            @Html.BootstrapTextBoxFor(m => m.Entity.Comments,
                HtmlExtensionsCommon.Html5InputTypes.text,
                "Comment",
                "Comment",
                true,
                false)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Entity.Resource,
                "Resource")
            @Html.BootstrapTextBoxFor(m => m.Entity.Resource,
                HtmlExtensionsCommon.Html5InputTypes.url,
                "resource url",
                "resource url",
                true,
                false,
                new {@id = "imagebox"})
        </div>
        <div class="form-group">
            <div>
                <input type="file" name="UploadFile" id="txtUploadFile" class="makethispretty"/>
            </div>

        </div>


        <!-- ** END INPUT AREA -->
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="row">
                <div class="col-sm-12">
                    
                    @Html.Bootstrap().Button("Save").AddAttribute("data-bacs488-action", "save").SetIcon(Icon.FloppyDisk).SetState(ButtonState.Primary)
                    @Html.Bootstrap().Button("Cancel").AddAttribute("data-bacs488-action", "cancel").SetIcon(Icon.FloppyDisk).SetState(ButtonState.Primary).AddAttribute("formnovalidate", "formnovalidate")

                </div>

            </div>
        </div>
    </div>
</div>