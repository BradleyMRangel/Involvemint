@using Microsoft.Web.Helpers
@using WebApplication1.Components
@model WebApplication1.ViewModel.AttendeeViewModel.AttendeeViewModel
<style>
    .panel-heading {
        background-color: green !important;
    }

    .btn-primary {
        background-color: green;
        border-color: darkgreen;
    }
</style>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h1 class="panel-title">
            Event Information for @Model.AnEvent.EventName
        </h1>
    </div>
    <div class="panel-body">
        <!-- ** BEGIN MESSAGE AREA -->
        <div class="row">
            <div class="col-xs-12">
                @if (!Model.IsValid)
                {
                    <div class="alert alert-danger
                    alert-dismissable"
                         role="alert">
                        <button type="button" class="close"
                                data-dismiss="alert">
                            <span aria-hidden="true">
                                &times;
                            </span>
                            <span class="sr-only">Close</span>
                        </button>
                        @Html.ValidationSummary(false)
                    </div>
                }
            </div>
        </div>
        <!-- ** END MESSAGE AREA -->
        <!-- ** BEGIN INPUT AREA -->
        <div class="form-group">

            @Html.LabelFor(m => m.Entity.firstName,
                " Name")
            @Html.BootstrapTextBoxFor(m => m.Entity.firstName,
                HtmlExtensionsCommon.Html5InputTypes.text, /*type*/
                "First Name", /*title*/
                "Name", /*placeholder*/
                true, /*is required*/
                false,
                null) @*/*autofocus*/*@
            </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Entity.lastName,
                "Last Name")
            @Html.BootstrapTextBoxFor(m => m.Entity.lastName,
                HtmlExtensionsCommon.Html5InputTypes.text,
                "Last Name",
                "Enter Last Name",
                true,
                false,
                null)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Entity.AttendeeResource,
                "Image")
            @Html.BootstrapTextBoxFor(m => m.Entity.AttendeeResource,
                HtmlExtensionsCommon.Html5InputTypes.url,
                "resource url",
                "resource url",
                true,
                false,
                new { @id = "imagebox" })
        </div>
        <div class="form-group">
            <div>
                <input type="file" name="UploadFile" id="txtUploadFile" class="makethispretty" />
            </div>

        </div>
            @if (Model.Mode.Contains("Edit"))
            {
                <div>
                    @Html.Bootstrap().Button("Event Attendees").AddAttribute("data-bacs488-action", "updateAttendance").AddAttribute("data-bacs488-val", @Model.Entity.id).SetIcon(Icon.OkSign).SetState(ButtonState.Primary)
                </div>
            }

        </div>
        <!-- ** END INPUT AREA -->

        <div class="panel-footer">
            <div class="row">
                <div class="col-sm-12">
                    @Html.Bootstrap().Button("Save").AddAttribute("data-bacs488-action", "save").SetIcon(Icon.FloppyDisk).SetState(ButtonState.Primary)
                    @Html.Bootstrap().Button("Cancel").AddAttribute("data-bacs488-action", "cancel").AddAttribute("formnovalidate", "formnovalidate").SetIcon(Icon.FloppyDisk).SetState(ButtonState.Primary)
                </div>
            </div>
        </div>
    </div>